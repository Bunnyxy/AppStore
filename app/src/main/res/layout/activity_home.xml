<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:viewpager="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.HomeActivity">

    <com.seuic.app.store.view.ViewPagerIndicator
        android:id="@+id/home_viewpager_head"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/appStoreColor"
        android:orientation="horizontal"
        viewpager:count="3"
        viewpager:style="line"
        viewpager:textcolor="@color/homeTitleColor"
        viewpager:textszie="@dimen/home_indicator_size">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分类" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="管理" />
    </com.seuic.app.store.view.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dip"
        android:layout_weight="1" />

</LinearLayout>
