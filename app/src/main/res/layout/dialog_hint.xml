<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/hint_dialog"
              android:orientation="vertical"
              android:paddingTop="12dip">

    <TextView
        android:id="@+id/hint_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:paddingBottom="5dip"
        android:text="新任务提示"
        android:textColor="@color/updateTitleColor"
        android:textSize="@dimen/activity_text_big"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginBottom="5dip"
        android:background="@color/appStoreBgColor"/>

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="50dip"
        android:paddingRight="50dip"
        android:textColor="@color/summaryColor"
        android:textSize="@dimen/activity_text_small"/>

    <View
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dip"
        android:background="@color/appStoreBgColor"/>

    <FrameLayout
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>