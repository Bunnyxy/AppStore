<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="320dp"
              android:layout_height="wrap_content"
              android:background="@drawable/hint_dialog"
              android:orientation="vertical"
              android:paddingTop="16dp">

    <TextView
        android:id="@+id/hint_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:paddingBottom="5dip"
        android:text="新任务提示"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/activity_text_big"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginBottom="5dip"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/activity_text_big"/>

    <View
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="5dip"
        android:background="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <View
            android:id="@+id/line"
            android:layout_width="1dip"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/dialog_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dip"
            android:layout_toLeftOf="@id/line"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/activity_text_small"/>

        <TextView
            android:id="@+id/dialog_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/line"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/activity_text_small"/>
    </RelativeLayout>

</LinearLayout>