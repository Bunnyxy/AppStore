<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  ViewPager导航  -->
    <attr name="textszie" format="dimension"/>
    <attr name="textcolor" format="color|reference"/>
    <attr name="count" format="integer"/>
    <attr name="style">
        <enum name="line" value="0"/>
        <enum name="triangle" value="1"/>
    </attr>

    <declare-styleable name="viewpagerselector">
        <attr name="textszie"/>
        <attr name="textcolor"/>
        <attr name="count"/>
        <attr name="style"/>
    </declare-styleable>


    <!--  多功能TextView  -->
    <attr name="textstate">
        <enum name="normal" value="0"/>
        <enum name="loading" value="1"/>
        <enum name="loading_pause" value="2"/>
        <enum name="cancel" value="3"/>
        <enum name="loading_fail" value="4"/>
        <enum name="loading_finish" value="5"/>
        <enum name="uninstall" value="6"/>
        <enum name="update" value="7"/>
        <enum name="install_finish" value="8"/>
        <enum name="install_fail" value="9"/>
        <enum name="wait" value="10"/>
    </attr>

    <declare-styleable name="multifunctional">
        <attr name="textstate"/>
    </declare-styleable>
</resources>